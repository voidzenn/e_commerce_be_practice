<div class="d-flex justify-content-center align-items-center p-5 my-20 mx-20 h-auto vh-auto">
  <div class="card w-100 h-100">
    <div class="card-body p-5">
      <div class="d-flex flex-row justify-content-between">
        <div class="left-0">
          <%= render "layouts/messages" %>
        </div>
        <div class="float-right text-end">
          <%= link_to "Create User", new_admin_user_path, class: "btn btn-primary" %>
        </div>
      </div>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Role</th>
            <th class="col-2">Action</th>
          </tr>
          <% @users.each do |user| %>
            <tr>
              <td> <%= user.fname.capitalize %> </td>
              <td> <%= user.lname.capitalize %> </td>
              <td> <%= user.email %> </td>
              <td> <%= Role.find(user.role_id).name.capitalize %> </td>
              <td>
                <div class="d-flex flex-row gap-3">
                  <%= link_to "More Info", admin_user_path(user.id), class: "btn btn-info" %>
                  <%= link_to "Edit", edit_admin_user_path(user.id), class: "btn btn-primary" %>
                  <%= button_to "Delete", admin_user_path(user.id), method: :delete, class: "btn btn-danger" %>
                </div>
              </td>
            </td>
          <% end %>
        </thead>
      </table>
    </div>
  </div>
</div>
