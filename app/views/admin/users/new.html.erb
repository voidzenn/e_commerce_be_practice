<div class="d-flex justify-content-center align-items-center p-5 my-20 mx-20 h-auto vh-auto">
  <div class="card w-100 h-100">
    <div class="card-body p-5">
      <div class="card-title">
        <div class="d-flex flex-col">
          <div class="w-50">
            <h3>User Info</h3>
          </div>
          <div class="w-50 text-end">
            <%= link_to "Back to list", admin_users_path, class: "btn btn-secondary" %>
          </div>
        </div>
      </div>
      <hr>
      <% flash.each do |type, msg| %> 
          <% if type == 'error' %>
            <% msg.each do |m| %>
              <div class="alert alert-danger"><%= m %></div>
            <% end %>
          <% end %>
          <% if type == 'success' %>
            <div class="alert alert-success"><%= msg %></div>
          <% end %>
      <% end %>
      <%= form_with url: admin_users_path, method: :post do |f| %>
        <%= f.label "First Name *", class: "form-label" %>
        <%= f.text_field :fname, required: true, class: "form-control mb-3" %>
        <%= f.label "Last Name *", class: "form-label" %>
        <%= f.text_field :lname, required: true, class: "form-control mb-3" %>
        <%= f.label "Email *", class: "form-label" %>
        <%= f.email_field :email, required: true, class: "form-control mb-3" %>
        <%= f.label "Age", class: "form-label" %>
        <%= f.number_field :age, class: "form-control mb-3" %>
        <%= f.label "Gender", class: "form-label mb-3" %>
        <%= f.select :gender, ["Male", "Female"], {}, class: "form-select mb-4" %>
        <%= f.label "Role", class: "form-label" %>
        <%= f.select :role_id, Role.all.collect { |r| [r.name.capitalize, r.id] }, {}, class: "form-select mb-4" %>
        <div class="text-end mt-4">
          <%= f.submit "Save", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
